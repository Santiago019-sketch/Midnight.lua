local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Workspace = game:GetService("Workspace")
local localPlayer = Players.LocalPlayer
local playerName = localPlayer.Name

-- GUI Setup
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TrainingGui"
screenGui.Parent = localPlayer.PlayerGui

-- Main Frame
local frame = Instance.new("Frame")
frame.Parent = screenGui
frame.Size = UDim2.new(0, 400, 0, 300)
frame.Position = UDim2.new(0.5, -200, 0.5, -150)  -- Center the frame
frame.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
frame.BackgroundTransparency = 0.5
frame.BorderSizePixel = 0  -- Remove the frame border for a cleaner look

-- Title Label
local titleLabel = Instance.new("TextLabel")
titleLabel.Parent = frame
titleLabel.Size = UDim2.new(1, 0, 0, 50)
titleLabel.Text = "Training Commands"
titleLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
titleLabel.TextSize = 24
titleLabel.BackgroundTransparency = 1
titleLabel.TextAlign = Enum.TextAlign.Center

-- Button Generator Function
local function createButton(text, position, callback)
    local button = Instance.new("TextButton")
    button.Parent = frame
    button.Size = UDim2.new(0, 200, 0, 50)
    button.Position = position
    button.Text = text
    button.BackgroundColor3 = Color3.fromRGB(0, 255, 0)  -- Default color
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.TextSize = 20
    button.BorderSizePixel = 0

    button.MouseButton1Click:Connect(callback)
    return button
end

-- Buttons and their actions
local function onCombatButtonClick()
    local tbl_main1 = {
        localPlayer.Stats,
        localPlayer.Status
    }
    ReplicatedStorage.Remotes.Training.Combat5:InvokeServer(unpack(tbl_main1))
end

local function onDefenseButtonClick()
    local tbl_main2 = {
        localPlayer.Stats,
        localPlayer.Status,
        Workspace[playerName].Humanoid,
        Workspace[playerName].RightHand
    }
    ReplicatedStorage.Remotes.Training.Defense5:InvokeServer(unpack(tbl_main2))
end

local function onBlastButtonClick()
    local tbl_main = {
        localPlayer.Status,
        localPlayer.Stats,
        Workspace[playerName].HumanoidRootPart,
        Workspace[playerName].RightHand,
        Workspace[playerName]
    }
    ReplicatedStorage.Remotes.Training.Blast5:InvokeServer(unpack(tbl_main))
end

local function onAgilityButtonClick()
    local tbl_main6 = {
        localPlayer.Stats
    }
    ReplicatedStorage.Remotes.Training.Agility5:FireServer(unpack(tbl_main6))
end

-- Creating the buttons using the generator function
createButton("Start Combat Training", UDim2.new(0.5, -100, 0, 60), onCombatButtonClick)
createButton("Start Defense Training", UDim2.new(0.5, -100, 0, 120), onDefenseButtonClick)
createButton("Start Blast Training", UDim2.new(0.5, -100, 0, 180), onBlastButtonClick)
createButton("Start Agility Training", UDim2.new(0.5, -100, 0, 240), onAgilityButtonClick)
